<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/remind_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/success"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_above="@id/baseline_submit_status"/>

        <TextView
            android:id="@+id/baseline_submit_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="40sp"
            android:text="已提交"
            android:layout_above="@id/remind"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已提交的访视处于锁定状态，如需修改请联系总中心"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btn_baseline_submit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="提 交"
            android:textSize="25sp"
            android:background="@color/footer_color"
            android:textColor="@color/background"
            android:layout_below="@id/remind"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>