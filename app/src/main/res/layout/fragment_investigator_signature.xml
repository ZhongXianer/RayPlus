<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.base_fragment.InvestigatorSignatureFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/signature_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@id/signature_status"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/signature_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="使用当前账户对基线资料签名"
            android:textAlignment="center"
            android:layout_above="@id/account_info"
            android:textColor="@color/_xpopup_title_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/account_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="当前账户：管理员"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/research_center_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_info"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="所属中心:华中科技大学同济医学院附属同济医院"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/confirm_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/research_center_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:background="@color/footer_color"
            android:text="确认签名"
            android:textColor="@color/background"
            android:textSize="25sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>